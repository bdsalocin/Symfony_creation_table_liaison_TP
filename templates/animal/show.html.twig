{% extends 'base.html.twig' %}

{% block title %}Animal{% endblock %}

{% block body %}
<main>
    <h1>Animal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ animal.id }}</td>
            </tr>
            <tr>
                <th>NomAnimal</th>
                <td>{{ animal.nomAnimal }}</td>
            </tr>
            <tr>
                <th>OriginePays</th>
                <td>{{ animal.originePays }}</td>
            </tr>
            <tr>
                <th>DateNaissance</th>
                <td>{{ animal.dateNaissance ? animal.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateArrivee</th>
                <td>{{ animal.dateArrivee ? animal.dateArrivee|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>RaceAnimal</th>
                <td>{{ animal.raceAnimal }}</td>
            </tr>
            <tr>
                <th>ComportementAnimal</th>
                <td>{{ animal.idComportement ? animal.idComportement.typeComportement : 'Aucun' }}</td>
            </tr>
            <tr>
                <th>Adoption</th>
                <td>{% if animal == true %}
                <button><a href="{{ path('app_adoptant_new') }}">Adopter</a></button>
                {% else %}
                Non adoptable
                {% endif %}
                </td>
                
        </tbody>
    </table>

    <a href{ }}

    <a href="{{ path('app_animal_index') }}">back to list</a>

    <a href="{{ path('app_animal_edit', {'id': animal.id}) }}">edit</a>

    {{ include('animal/_delete_form.html.twig') }}
    </main>
{% endblock %}
