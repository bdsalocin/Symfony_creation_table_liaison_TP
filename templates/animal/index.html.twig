{% extends 'base.html.twig' %}

{% block title %}Animal index{% endblock %}

{% block body %}
<main>
    <h1>les Animaux du refuge</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Voir ou modifier</th>
                <th>Nom</th>
                <th>Pays d'origine</th>
                <th>Date de Naissance</th>
                <th>Date d' Arrivee</th>
                <th>Race Animal</th>
                <th>Comportement</th>
                <th>Id adoptant</th>    
                <th>Est adopté ?</th>
                <th>actions</th>

                
            </tr>
        </thead>
        <tbody>
        {% for animal in animals %}
            <tr>
               
                <td>
                <a href="{{ path('app_animal_show', {'id': animal.id}) }}">show</a>
                <a href="{{ path('app_animal_edit', {'id': animal.id}) }}">edit</a>
                </td>
                <td>{{ animal.nomAnimal }}</td>
                <td>{{ animal.originePays }}</td>
                <td>{{ animal.dateNaissance ? animal.dateNaissance|date('Y-m-d') : '' }}</td>
                <td>{{ animal.dateArrivee ? animal.dateArrivee|date('Y-m-d') : '' }}</td>
                <td>{{ animal.raceAnimal }}</td>
                <td>{{ animal.idComportement.typeComportement }}</td>

                <td>Bonjour</td>
                <td>
                    
                    {% if animal.idAdoptant is null %}
                        <a href="{{ path('app_adoptant_show', {'id': animal.id}) }}">voir son adoptant</a>
                        {% else %}
                            Cet animal est n'est pas adopté
                            {% endif %}
                        </td>
                        
                        <td>{% if  animal.idComportement.typeComportement == 'Domestique' and animal.adoptable is null %}
                        <button><a href="{{ path('app_adoptant_new') }}">Adopter</a></button>
                        {% else %}
                            Non adoptable
                            {% endif %}
                        </td>
                    </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">no records found</td>
                        </tr>
                        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_animal_new') }}">Create new</a>
    <a href="{{ path('home') }}">retour</a>
    </main>
{% endblock %}
