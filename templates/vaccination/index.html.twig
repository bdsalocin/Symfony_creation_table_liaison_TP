{% extends 'base.html.twig' %}

{% block title %}Vaccination index{% endblock %}

{% block body %}
    <h1>Vaccination index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateVaccination</th>
                <th>DateProchaineVaccination</th>
                <th>NumeroVaccination</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vaccination in vaccinations %}
            <tr>
                <td>{{ vaccination.id }}</td>
                <td>{{ vaccination.dateVaccination ? vaccination.dateVaccination|date('Y-m-d') : '' }}</td>
                <td>{{ vaccination.dateProchaineVaccination ? vaccination.dateProchaineVaccination|date('Y-m-d') : '' }}</td>
                <td>{{ vaccination.numeroVaccination }}</td>
                <td>
                    <a href="{{ path('app_vaccination_show', {'id': vaccination.id}) }}">show</a>
                    <a href="{{ path('app_vaccination_edit', {'id': vaccination.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_vaccination_new') }}">Create new</a>
{% endblock %}
